{{> admin_header}}

<main class="container">
    <div class="row">
        <div class="columns col-12">
            {{> admin_sidebar}}
            <div class="column col-9">
                <article class="card">
                    <div class="card-image">
                        <img src="{{blog.main_image}}" alt="{{blog.title}}" class="img-responsive">
                    </div>
                    <div class="card-header">
                        <h1>{{blog.title}}</h1>
                    </div>
                    <div class="card-body">
                        {{blog.content}}
                    </div>
                    <div class="card-footer columns col-12">
                        <div class="column col-6">
                           <span class="label my-2">
                           Published on {{blog.created_at}}
                       </span>
                            <span class="label my-2">
                            Last updated on {{blog.updated_at}}
                       </span>
                        </div>
                        <div class="column col-6">
                            <span class="label my-2">
                                Author: {{#if blog.first_name}}
                                {{blog.first_name}} {{blog.last_name}}
                            {{else}}
                                {{blog.author_first_name}} {{blog.author_last_name}}
                            {{/if}}
                            </span>
                            <span class="label my-2">
                                {{#if blog.author_email}}
                                    <a href="mailto:{{blog.author_email}}">{{blog.author_email}}</a>
                                {{/if}}
                            </span>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
</main>

{{> admin_footer }}