{{> admin_header}}

<div class="container my-2">
    <div class="row">
        <div class="columns col-12">
            {{> admin_sidebar}}
            <div class="column col-9">
                <h2>Contacts</h2>
                <div class="divider"></div>
                
                    {{#if error}}
                        <div class="toast toast-error"></div>
                            <p>{{error}}</p>
                        </div>
                    {{/if}}
                <div class="col-12">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Sender's name</th>
                                <th>E-mail address</th>
                                <th>Message</th>
                                <th>Received at</th>
                                <th>Mark as handled</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#if model.hasError}}
                                <tr>
                                    <td colspan="5">{{model.errorMessage}}</td>
                                </tr>
                            {{/if}}
                            {{#if model.contacts}}
                                {{#each model.contacts}}
                                    <tr>
                                        <td>{{name}}</td>
                                        <td>{{email}}</td>
                                        <td>{{message}}</td>
                                        <td>{{showLocalDateTime received_at}}</td>
                                        {{#if is_read}}
                                            <td>Marked as handled</td>
                                        {{else}}
                                            <td><a href="/admin/contacts/handle/{{contact_id}}" class="btn btn-primary">Mark as handled</a></td>
                                        {{/if}}
                                    </tr>
                                {{/each}}
                            {{else}}
                                <tr>
                                    <td colspan="5">No contacts found.</td>
                                </tr>
                            {{/if}}
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>

{{> admin_footer}}