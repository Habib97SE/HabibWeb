{{> admin_header}}

<div class="container my-2">
    <div class="row">
        <div class="columns col-12">
            {{> admin_sidebar}}
            <div class="column col-9">
                <div class="col-12" >
                    <h1 style="display: inline-block;">New posts</h1>
                </div>
                <form method="post" action="/admin/blog/new">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" name="title" placeholder="Title" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <label for="content">Content</label>
                            <textarea name="content" placeholder="Content" class="form-input" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="main_image">Main Image</label>
                            <input type="file" name="main_image" placeholder="Main Image" class="form-input" required>
                        </div>
                        <div class="form-group">
                            <div class="btn btn-primary">Create new post</div>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>

{{> admin_footer}}