{{> admin_header}}

<div class="container my-2">
    <div class="row">
        <div class="columns col-12">
            {{> admin_sidebar}}
            <div class="column col-9">
                <div class="col-12" >
                    <h1 style="display: inline-block;">Blogs</h1>
                    <a style="display: inline-block;" href="/admin/blogs/new" class="btn btn-primary">Add Blog</a>
                </div>
                {{#if blogs}}
                {{#each blogs}}
                    <div class="card">
                        
                        <div class="card-header">
                            <h4>{{title}}</h4>
                        </div>
                        <div class="divider"></div>
                        <div class="card-image img-fit-cover">
                            <img src="{{main_image}}" class="img-responsive img-fit-cover">
                        </div>
                        <div class="card-body">
                            <p>{{{content}}}</p>
                        </div>
                        <div class="divider"></div>
                        <div class="card-footer">
                            <a href="/admin/blogs/edit/{{id}}" class="btn btn-primary">Edit</a>
                            <a href="/admin/blogs/delete/{{id}}" class="btn btn-error">Delete</a>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                        <div class="empty">
                            <p class="empty-title h5">No blogs found.</p>
                            <p class="empty-subtitle">You can add a new blog by clicking the button below.</p>
                            <div class="empty-action">
                                <a href="/admin/blogs/new" class="btn btn-primary">Add Blog</a>
                            </div>
                        </div>
                    {{/if}}
                {{#if hasMultiplePages }}
                <div class="col-12 pagination">
                    <span class="label"><a href="/admin/blogs/page/{{prev}}">Prev</a></span>
                    <span class="label">Page {{currentPage}} of {{totalPages}}</span>
                    <span class="label"><a href="/admin/blogs/page/{{next}}">Next</a></span>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

{{> admin_footer}}