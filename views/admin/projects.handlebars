{{> admin_header}}

<div class="container my-2">
    <div class="row">
        <div class="columns col-12">
            {{> admin_sidebar}}
            <div class="column col-9">
                <div class="col-12">
                    <h1 style="display: inline-block;">Blogs</h1>
                    <a style="display: inline-block;" href="/admin/blogs/new" class="btn btn-primary">Add Blog</a>
                </div>
                {{#if projects}}
                    {{#each projects}}
                        <div class="card">

                            <div class="card-header">
                                <h4>{{title}}</h4>
                            </div>
                            <div class="divider"></div>
                            <div class="card-image img-fit-cover">
                                <img src="{{main_image}}" class="img-responsive img-fit-cover">
                            </div>
                            <div class="card-body">
                                <p>{{{description}}}</p>
                            </div>
                            <div class="divider"></div>
                            <div class="card-footer">
                                <div class="col-6">
                                    <a href="/admin/blogs/edit/{{project_id}}" class="btn btn-primary">Edit</a>
                                    <a href="/admin/blogs/delete/{{project_id}}" class="btn btn-error">Delete</a>
                                    <a href="/admin/blogs/{{project_id}}" class="btn btn-primary">Read more</a>
                                </div>
                                <span class="label">
                                    Published on {{created_at}}
                                </span>
                                <span class="label">
                                    Last updated on {{updated_at}}
                                </span>

                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="empty">
                        <p class="empty-title h5">No projects were found.</p>
                        <p class="empty-subtitle">You can add a new project by clicking the button below.</p>
                        <div class="empty-action">
                            <a href="/admin/projects/new" class="btn btn-primary">Add Project</a>
                        </div>
                    </div>
                {{/if}}
                {{#if hasMultiplePages }}
                    <div class="col-12 pagination">
                        <span class="label"><a href="/admin/blogs/page/{{prev}}">Prev</a></span>
                        <span class="label">Page {{currentPage}} of {{totalPages}}</span>
                        <span class="label"><a href="/admin/blogs/page/{{next}}">Next</a></span>
                    </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

{{> admin_footer}}