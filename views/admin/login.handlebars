{{> admin_header}}
    <div class="site-container">  
      <main class="container">

      <div class="col-4 col-md-9 col-sm-12 col-mx-auto parent">
        <form method="POST" action="/admin/login">
          <div class="form-group">
            <label class="form-label" for="email">Email</label>
            <input
              class="form-input"
              type="email"
              name="email"
              id="email"
              placeholder="Email"
              value="{{email}}"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              class="form-input"
              type="password"
              name="password"
              id="password"
              placeholder="Password"
              value="{{password}}"
              required
            />
          </div>
          <div class="form-group">
            <button class="btn btn-primary" type="submit">Login</button>
            <button class="btn btn-link col-sm-12" type="reset">Reset</button>
            {{#if error}}
              <div class="toast toast-error">
                {{error}}
              </div>
            {{/if}}

          </div>
        </form>
      </div>
    </main>
    </div>

{{> admin_footer}}