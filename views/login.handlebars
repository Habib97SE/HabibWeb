{{> header}}

<main class="container">
    <div class="row">
        <div class="col-6 col-mx-auto">
            <div class="card py-2 px-2 my-2">
                <h2>Login</h2>
                {{#if main.error}}
                    <div class="toast toast-error">
                        <p>{{main.error}}</p>
                    </div>
                {{/if}}
                <form method="post" action="/login">
            

            <div class="form-group col-6 col-mx-auto">
                <label for="email">Email<span class="text-danger">*</span></label>
                <input
                    type="email"
                    class="form-input"
                    id="email"
                    name="email"
                    placeholder="email"
                    required
                />

            </div>
            <div class="form-group col-6 col-mx-auto">
                <label for="password">Password<span class="text-danger">*</span></label>
                <input
                    type="password"
                    class="form-input"
                    id="password"
                    name="password"
                    placeholder="password"
                    required
                />
            </div>
            



            <div class="form-group col-6 col-mx-auto">
                <button class="btn btn-primary" type="submit">
                    Login
                </button>
            </div>
        </form>
            </div>
        </div>
    </div>
</main>

{{> footer}}
